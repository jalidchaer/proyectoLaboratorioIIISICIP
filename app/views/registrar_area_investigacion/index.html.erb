        <script src="js/index.js"></script>

        <script>
           $(document).ready(function(){
      var i=1;
     $("#add_row").click(function(){
      $('#addr'+i).html("<td>"+ (i+1) +"</td><td><input name='descripcion"+i+"' type='text' placeholder='Descripcion' class='form-control input-md'  /> </td><td><input  name='autor0"+i+"' type='text' placeholder='Autor'  class='form-control input-md'></td><td><input  name='fecha"+i+"' type='text' placeholder='Fecha'  class='form-control input-md'></td>");

      $('#tab_logic').append('<tr id="addr'+(i+1)+'"></tr>');
      i++; 
  });
     $("#delete_row").click(function(){
       if(i>1){
     $("#addr"+(i-1)).html('');
     i--;
     }
   });

});
        </script>

  
